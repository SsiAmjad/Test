FUNCTION "fcGetArrayElementCount" : DInt
{ S7_Optimized_Access := 'TRUE' }
VERSION : 0.1
   VAR_INPUT 
      pArray : Variant;
   END_VAR


BEGIN
	// +------------------------------------------------------------------------------------------------------------------+
	// | Reads the number of array elements                                                                               |
	// +------------------------------------------------------------------------------------------------------------------+
	
	// +-------------+-------------+-------------+------------------------------------------------------------------------+
	// | Version     | Date        | Author      | Comment                                                                |
	// +-------------+-------------+-------------+------------------------------------------------------------------------+
	// | 2.0.0.0     | 24.02.2017  | BaM         | Initial version                                                        |
	// +-------------+-------------+-------------+------------------------------------------------------------------------+
	
	#fcGetArrayElementCount := UDINT_TO_DINT(CountOfElements(#pArray));
END_FUNCTION

