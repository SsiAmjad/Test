FUNCTION "FC_Ctrl_Tol" : SInt
{ S7_Optimized_Access := 'TRUE' }
VERSION : 0.1
   VAR_IN_OUT 
      Benne : "S_Benne";
   END_VAR


BEGIN
	IF (#Benne.Composant.Poids - #Benne.Composant.Net) >= #Benne.Composant.Tol_Inf THEN
	    #FC_Ctrl_Tol := -1;
	    RETURN;
	END_IF;
	IF (#Benne.Composant.Net - #Benne.Composant.Poids) > #Benne.Composant.Tol_Sup THEN
	    #FC_Ctrl_Tol := -2;
	    RETURN;
	END_IF;
	#FC_Ctrl_Tol := 1;
END_FUNCTION

